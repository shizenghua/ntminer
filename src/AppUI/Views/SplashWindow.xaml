<Window x:Class="NTMiner.Views.SplashWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:NTMiner.Views"
		xmlns:vm="clr-namespace:NTMiner.Vms"
		WindowStartupLocation="CenterScreen"
		mc:Ignorable="d"
		WindowStyle="None"
		AllowsTransparency="True"
		MouseDown="MetroWindow_MouseDown"
		Title="{x:Static local:SplashWindow.WindowTitle}" Height="260" Width="520">
	<Grid Background="{StaticResource IconFillColor}">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="20"></RowDefinition>
		</Grid.RowDefinitions>
		<WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<Image Width="120" Height="120" Source="{x:Static vm:AppStatic.BigLogoImageSource}">
			</Image>
			<TextBlock Margin="10 0 0 0" VerticalAlignment="Center" FontSize="50" Foreground="{StaticResource ThemeForeground}" Text="{x:Static local:SplashWindow.WindowTitle}"></TextBlock>
		</WrapPanel>
		<TextBlock Margin="4 2 0 0" Text="{x:Static local:SplashWindow.Version}" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource ThemeForeground}"></TextBlock>
		<WrapPanel Grid.Row="1" Background="{StaticResource StateBarBackground}">
		</WrapPanel>
	</Grid>
</Window>
