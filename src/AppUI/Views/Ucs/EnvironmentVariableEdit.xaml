<UserControl x:Class="NTMiner.Views.Ucs.EnvironmentVariableEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
        xmlns:vm="clr-namespace:NTMiner.Vms"
        xmlns:local="clr-namespace:NTMiner.Views.Ucs" Background="White">
    <UserControl.Resources>
        <Style x:Key="LblTb" TargetType="TextBlock" BasedOn="{StaticResource LblTbBase}">
            <Setter Property="Width" Value="60"></Setter>
        </Style>
        <sys:String x:Key="WindowTitle">
            环境变量
        </sys:String>
    </UserControl.Resources>
    <StackPanel Margin="10">
        <WrapPanel Margin="0 2">
            <TextBlock Style="{StaticResource LblTb}">Key</TextBlock>
            <TextBox Width="420" VerticalContentAlignment="Center" Text="{Binding Key, ValidatesOnExceptions=True}">
            </TextBox>
        </WrapPanel>
        <WrapPanel Margin="0 2">
            <TextBlock Style="{StaticResource LblTb}">Value</TextBlock>
            <TextBox Width="420" VerticalContentAlignment="Center" Text="{Binding Value, ValidatesOnExceptions=True}">
            </TextBox>
        </WrapPanel>

        <controls:KbButton
            Command="{Binding Save}" 
            Visibility="{x:Static vm:AppStatic.IsDebugModeVisible}"
            Margin="0 10 0 0"
            Padding="10 0"
            HorizontalAlignment="Center"
            Background="{StaticResource ThemeBackground}"
            Foreground="{StaticResource ThemeForeground}"
            CornerRadius="2">
            <WrapPanel>
                <Path
                    Width="12"
                    Height="12"
                    Data="{StaticResource Icon_Ok}"
                    Fill="{StaticResource ThemeForeground}"
                    Stretch="Fill" />
                <TextBlock
                    Padding="4"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource ThemeForeground}"
                    Text="确定" />
            </WrapPanel>
        </controls:KbButton>
    </StackPanel>
</UserControl>
