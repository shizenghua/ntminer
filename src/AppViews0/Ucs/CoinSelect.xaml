<UserControl x:Class="NTMiner.Views.Ucs.CoinSelect"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:blankWindow="http://NTMiner.com"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:local="clr-namespace:NTMiner.Views.Ucs"
		xmlns:vm="clr-namespace:NTMiner.Vms;assembly=AppModels"
		xmlns:app="clr-namespace:NTMiner;assembly=AppModels"
		BorderBrush="{StaticResource WindowBorderBrush}"
		BorderThickness="1"
		Background="White"
		mc:Ignorable="d" 
		d:DesignHeight="300"
        d:DataContext="{d:DesignData Source=/Design/CoinSelectViewModel.xaml}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="*" MinHeight="100"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<WrapPanel HorizontalAlignment="Left">
			<WrapPanel>
				<Path 
					Margin="4 0 0 0"
					Width="12"
					Height="12"
					Fill="{StaticResource IconFillColor}"
					Stretch="Fill"
					Data="{StaticResource Icon_Serach}"></Path>
				<TextBlock Padding="2 6">搜索</TextBlock>
				<controls:KbTextBox 
					x:Name="TbKeyword" Width="154" Height="24"
					Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}" 
					VerticalContentAlignment="Center"
					Hint="请输入想搜索的币种"
					BorderBrush="{StaticResource LineColor}"
					BorderThickness="1"
					Background="White"
					SelectedColor="#409EFF" />
				<controls:KbButton 
					Height="20"
					Background="Transparent" 
					BorderThickness="0"
					Command="{Binding ClearKeyword}"
					Visibility="{Binding ElementName=TbKeyword,Path=Text, Converter={StaticResource NotNullOrEmptyVisibilityConverter}}"
					Margin="-14 0 0 0" 
					HorizontalAlignment="Left">
					<Path
						Width="8"
						Height="8"
						Data="{StaticResource Icon_Close}"
						Fill="{StaticResource IconFillColor}"
						Stretch="Fill" />
				</controls:KbButton>
			</WrapPanel>
			<controls:KbButton
				Margin="4 2"
				BorderThickness="0"
				Height="24"
				Padding="4 0"
				Click="KbButtonManageCoins_Click"
				Background="{StaticResource ThemeBackground}"
				Command="{x:Static app:AppStatic.ShowCoins}"
				CommandParameter="{Binding SelectedResult}"
				CornerRadius="2">
				<WrapPanel>
					<Path
						Width="14"
						Height="14"
						Data="{StaticResource Icon_Coin}"
						Fill="{StaticResource ThemeForeground}"
						Stretch="Fill" />
					<TextBlock Margin="4 0 0 0" Text="管理" Foreground="{StaticResource ThemeForeground}"></TextBlock>
				</WrapPanel>
			</controls:KbButton>
		</WrapPanel>
		<controls:KbButton 
			Background="Transparent" 
			BorderThickness="0" 
			Padding="0 0 4 0"
			Command="{Binding HideView}"
			HorizontalAlignment="Right">
			<Path
				Width="14"
				Height="14"
				Data="{StaticResource Icon_Close}"
				Fill="Black"
				Stretch="Fill" />
		</controls:KbButton>
		<DataGrid 
			Grid.Row="1"
			Margin="0" 
			ItemsSource="{Binding QueryResults}" 
			SelectedItem="{Binding SelectedResult}"
			MouseUp="DataGrid_MouseUp"
			PreviewKeyDown="DataGrid_PreviewKeyDown"
			BorderThickness="0">
			<DataGrid.Columns>
				<DataGridTemplateColumn Width="40" Header="图标" IsReadOnly="True">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Image Width="30" Height="30" Source="{Binding IconImageSource}">
							</Image>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Width="100" Header="编码" IsReadOnly="True">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<WrapPanel>
								<TextBlock Text="{Binding Code}"></TextBlock>
								<Path
									Margin="4 0 0 0"
									Visibility="{Binding IsHot,Converter={StaticResource BoolToVisibilityConverter}}"
									Width="16"
									Height="16"
									Data="{StaticResource Icon_Hot}"
									Fill="Red"
									Stretch="Fill" />
							</WrapPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTextColumn Width="140" Header="中文名" Binding="{Binding CnName}" IsReadOnly="True">
				</DataGridTextColumn>
				<DataGridTextColumn Width="140" Header="算法" Binding="{Binding AlgoItem.Value}" IsReadOnly="True">
				</DataGridTextColumn>
				<DataGridTemplateColumn Width="40" IsReadOnly="True">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<controls:KbLinkButton
								VerticalAlignment="Center"
								Padding="0"
								Visibility="{Binding TutorialUrl,Converter={StaticResource NotNullOrEmptyVisibilityConverter}}"
								Command="{x:Static app:AppStatic.ViewUrl}"
								CommandParameter="{Binding TutorialUrl}"
								KbDisplayLine="False"
								Content="教程"
								KbSystemButtonHoverBackground="Transparent"
								Background="Transparent">
							</controls:KbLinkButton>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
		<TextBlock Grid.Row="1" Visibility="{Binding QueryResults, Converter={StaticResource NoRecordVisibilityConverter}}" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center">没有记录</TextBlock>
		<TextBox Grid.Row="2" Visibility="{x:Static app:AppStatic.IsBrandSpecifiedCollapsed}" IsReadOnly="True" BorderThickness="0" Foreground="{StaticResource LableColor}" FontSize="12">支持所有适合显卡挖的币，少币种？Q群2362120103报小编</TextBox>
	</Grid>
</UserControl>
