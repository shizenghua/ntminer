<blankWindow:BlankWindow x:Class="NTMiner.Views.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:blankWindow="http://NTMiner.com"
        xmlns:controls="clr-namespace:NTMiner.Controls"
        xmlns:vm="clr-namespace:NTMiner.Vms"
        xmlns:local="clr-namespace:NTMiner.Views"
        ResizeMode="NoResize"
        SizeToContent="Height"
        FontSize="20"
        BorderBrush="{StaticResource IconFillColor}"
        WindowStartupLocation="CenterOwner"
        MouseDown="Window_MouseDown"
        Background="White"
        mc:Ignorable="d" Width="400" MinHeight="200">
    <blankWindow:BlankWindow.Resources>
        <ResourceDictionary>
            <PathGeometry x:Key="Icon" Figures="{x:Null}">
            </PathGeometry>
        </ResourceDictionary>
    </blankWindow:BlankWindow.Resources>
    <Grid> 
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Background="{StaticResource ThemeBackground}" Height="30">
            <WrapPanel DockPanel.Dock="Left">
                <Path 
                    Margin="4 4 0 0"
                    Width="16"
                    Height="16"
                    Visibility="{Binding IsIconVisible}"
                    Fill="{StaticResource ThemeForeground}"
                    Data="{DynamicResource Icon}"
                    Stretch="Fill"/>
                <TextBlock
                    x:Name="TextBlockTitle"
                    Foreground="{StaticResource ThemeForeground}"
                    Margin="4 4 0 0"
                    FontSize="16" />
            </WrapPanel>
            <controls:KbSystemCloseButton
                DockPanel.Dock="Right" 
                HorizontalAlignment="Right" 
				Height="30"
				KbSystemButtonSize="36" />
            <controls:KbLinkButton 
                x:Name="BtnHelp"
                Margin="0 0 4 0"
                Visibility="Collapsed"
                DockPanel.Dock="Right" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
				KbDisplayLine="False"
                Click="Help_Click"
				KbSystemButtonHoverBackground="Transparent"
				Background="Transparent"
				Foreground="{StaticResource ThemeForeground}">
                <WrapPanel>
                    <Path 
                        Width="14"
                        Height="14"
                        Fill="{StaticResource ThemeForeground}"
                        Data="{StaticResource Icon_Help}"
                        Stretch="Fill"/>
                    <TextBlock Margin="2 0 0 0" FontSize="13" Foreground="{StaticResource ThemeForeground}">帮助</TextBlock>
                </WrapPanel>
            </controls:KbLinkButton>
        </DockPanel>
        <StackPanel Grid.Row="1" Margin="10 20 10 10" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock x:Name="TextBlockMessage" VerticalAlignment="Center" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0 0 0 30">
            <controls:KbButton 
                Padding="15 2"
                Margin="20 0"
                x:Name="BtnOk"
                Click="KbOkButton_Click"
                Background="{StaticResource ThemeBackground}"
                Foreground="{StaticResource ThemeForeground}"
                VerticalAlignment="Center"
                CornerRadius="2">
                <WrapPanel>
                    <Path
                        Width="14"
                        Height="14"
                        Data="{StaticResource Icon_Ok}"
                        Fill="{StaticResource ThemeForeground}"
                        Stretch="Fill" />
                    <TextBlock
                        FontSize="14"
                        Padding="0 4"
                        Foreground="{StaticResource ThemeForeground}"
                        VerticalAlignment="Center"
                        Text="好" />
                </WrapPanel>
            </controls:KbButton>
            <controls:KbButton 
                Padding="15 2"
                Margin="20 0"
                x:Name="BtnYes"
                Click="KbYesButton_Click"
                Background="{StaticResource ThemeBackground}"
                Foreground="{StaticResource ThemeForeground}"
                VerticalAlignment="Center"
                CornerRadius="2">
                <WrapPanel>
                    <Path
                        Width="14"
                        Height="14"
                        Data="{StaticResource Icon_Ok}"
                        Fill="{StaticResource ThemeForeground}"
                        Stretch="Fill" />
                    <TextBlock
                        FontSize="14"
                        Padding="0 4"
                        Foreground="{StaticResource ThemeForeground}"
                        VerticalAlignment="Center"
                        Text="是" />
                </WrapPanel>
            </controls:KbButton>
            <controls:KbButton 
                Padding="15 2"
                Margin="20 0"
                x:Name="BtnNo"
                Click="KbNoButton_Click"
                Background="Red"
                VerticalAlignment="Center"
                CornerRadius="2">
                <WrapPanel>
                    <Path
                        Width="14"
                        Height="14"
                        Data="{StaticResource Icon_Close}"
                        Fill="White"
                        Stretch="Fill" />
                    <TextBlock
                        FontSize="14"
                        Padding="0 4"
                        Foreground="White"
                        VerticalAlignment="Center"
                        Text="否" />
                </WrapPanel>
            </controls:KbButton>
        </WrapPanel>
    </Grid>
</blankWindow:BlankWindow>
